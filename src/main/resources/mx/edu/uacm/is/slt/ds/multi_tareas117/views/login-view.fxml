<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?> <?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.edu.uacm.is.slt.ds.multi_tareas117.controller.LoginController">

    <center>
        <HBox alignment="CENTER">

            <VBox alignment="CENTER" spacing="20"
                  prefWidth="350" HBox.hgrow="NEVER"
                  style="-fx-background-color: #4338ca;">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>
                <FontIcon iconLiteral="fas-file-invoice"
                          iconSize="80"
                          style="-fx-icon-color: white;"/>
                <Label text="Multi Tareas 117"
                       style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label text="Gestión de Tareas y Proyectos"
                       style="-fx-text-fill: #e0e0e0;"
                       textAlignment="CENTER" wrapText="true"/>
            </VBox>

            <VBox alignment="CENTER" spacing="15"
                  HBox.hgrow="ALWAYS"
                  maxWidth="400">
                <padding>
                    <Insets top="20" right="50" bottom="20" left="50"/>
                </padding>
                <Label text="Inicio de Sesión" styleClass="h2"/>
                <VBox spacing="5" alignment="BASELINE_LEFT" maxWidth="Infinity">
                    <Label text="Usuario (admin)"/>
                    <TextField fx:id="usernameField" promptText="admin@correo.com"/>
                </VBox>
                <VBox spacing="5" alignment="BASELINE_LEFT" maxWidth="Infinity">
                    <Label text="Contraseña (1234)"/>
                    <PasswordField fx:id="passwordField" promptText="••••••••"/>
                </VBox>
                <Button fx:id="loginButton" text="Entrar"
                        onAction="#onLoginButtonClick"
                        maxWidth="Infinity" styleClass="accent, large"/>
                <Label fx:id="errorLabel" styleClass="text-danger" visible="false"/>
                <Button text="¿No tienes cuenta? Regístrate"
                        styleClass="flat" maxWidth="Infinity"/>
            </VBox>

        </HBox>
    </center>

    <bottom>
        <fx:include source="footer.fxml" />
    </bottom>

</BorderPane>